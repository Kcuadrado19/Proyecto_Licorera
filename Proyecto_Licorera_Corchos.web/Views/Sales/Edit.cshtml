@model Proyecto_Licorera_Corchos.web.Data.Entities.Sales

@{
    ViewData["Title"] = "Editar Venta";
}

<div class="pagetitle">
    <h1>Ventas</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Ventas</a></li>
            <li class="breadcrumb-item active">Editar Venta</li>
        </ol>
    </nav>
</div>

<section class="sales dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-primary">Editar venta</h5>

            <form class="row g-3" asp-action="Edit" method="post">
                <input asp-for="Id_Sales" type="hidden" />

                @if (ViewBag.Products == null || !((List<SelectListItem>)ViewBag.Products).Any())
                    {
                        <div class="alert alert-warning">No hay productos disponibles para seleccionar.</div>
                    }
                    else
                    {
                        <div class="col-md-12">
                            <label asp-for="ProductId" class="form-label"></label>
                            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
                                <option value="">Seleccione un producto</option>
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                    }

                <div class="col-md-12">
                    <input asp-for="Sale_Date" type="date" class="form-control" />
                    <span asp-validation-for="Sale_Date" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <input asp-for="Sales_Value" class="form-control" />
                    <span asp-validation-for="Sales_Value" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}