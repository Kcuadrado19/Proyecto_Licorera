@model IEnumerable<ApplicationUser>

<h2>Usuarios Administrativos</h2>
<p>Aquí puedes ver, editar o eliminar los usuarios que gestionan la licorería.</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>Usuario</th>
            <th>Correo Electrónico</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Position</td>
                <td>
                    <a href="@Url.Action("Details", new { id = user.Id })" class="btn btn-info btn-sm">Detalles</a>
                    <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Agregar Nuevo Usuario</a>
