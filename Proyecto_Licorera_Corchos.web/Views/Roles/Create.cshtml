@model string

@{
    ViewData["Title"] = "Crear Rol - Licorería";
}

<h2>Crear Nuevo Rol</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="roleName">Nombre del Rol</label>
        <input type="text" class="form-control" id="roleName" name="roleName" required />
    </div>
    <h4>Permisos</h4>
    <div class="form-group">
        <label>Selecciona los permisos:</label>
        <div class="row">
            <div class="col">
                <label><input type="checkbox" name="permissions" value="Crear Ventas" /> Crear Ventas</label><br />
                <label><input type="checkbox" name="permissions" value="Eliminar Usuarios" /> Eliminar Usuarios</label>
            </div>
            <!-- Agrega más permisos según sea necesario -->
        </div>
    </div>
    <button type="submit" class="btn btn-success mt-3">Crear</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
